<h2><%="#{@team.name}" %> Team Roster</h2>
<p><%= link_to 'Create Player', "/teams/#{@team.id}/players/new" %> </p>
<p><%= link_to 'Sort Players Alphabetically', "/teams/#{@team.id}/players?order=name" %></p>
<br>
<% @players.each do |player| %>
<h2><%= player.name %></h2>
<p>Position: <%= player.position %></p>
<p>Jersey Number: <%= player.jersey_number %></p>
<p>Stanley Cup: <%= player.stanley_cup %></p>
<p><%= link_to "Edit #{player.name}", "/players/#{player.id}/edit" %> </p>
<% end %>
<br>
